[bar/bottom]
monitor = 
bottom = true
width = 100%
height = 28
background = #111

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

spacing = 0

font-0 = Segoe UI:size=10;0

modules-left = i3
#modules-right = cpu memory temperature filesystem xkeyboard volume wireless-network consumation  battery date        
modules-right = cpu memory filesystem date

tray-position = right 
tray-scale = 1.0
;tray-transparent = true
tray-background = ${self.background}
tray-maxsize = 64

